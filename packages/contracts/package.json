{
    "name": "packs-contracts",
    "version": "0.0.1",
    "description": "Packs contracts",
    "main": "index.js",
    "author": "PACKD",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json",
        "compile": "yarn compile:sol",
        "compile:sol": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile --config hardhat.config.ts",
        "compile:ts": "npx tsc",
        "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
        "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
        "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
        "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
        "prettier:check": "prettier --check \"**/*.{md,sol,ts,yml}\" --plugin prettier-plugin-solidity",
        "prettier:write": "prettier --write \"**/*.{md,sol,ts,yml}\" --plugin prettier-plugin-solidity",
        "start": "hardhat node",
        "start:dev": "concurrently -c \"auto\"  \"yarn start\" \"yarn task deploy-dev-env\"",
        "start:deploy-env": "yarn task deploy-dev-env --network localhost",
        "test": "hardhat test",
        "deploy": "yarn typechain && hardhat deploy",
        "deploy:local": "yarn deploy --network localhost ",
        "deploy:scrollSepolia": "yarn deploy --network scrollSepolia",
        "deploy:polygonZkEVMTestnet": "yarn deploy --network polygonZkEVMTestnet",
        "deploy:mantleTestnet": "yarn deploy --network mantleTestnet",
        "verify": "hardhat verify",
        "verify:scrollSepolia": "yarn verify --network scrollSepolia",
        "task": "yarn hardhat",
        "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
    },
    "devDependencies": {
        "@account-abstraction/contracts": "^0.6.0",
        "@doncesarts/tokenbound-contracts": "^0.3.1-beta.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.0",
        "@openzeppelin/contracts": "^4.9.3",
        "@trivago/prettier-plugin-sort-imports": "^4.0.0",
        "@typechain/ethers-v6": "^0.5.0",
        "@typechain/hardhat": "^9.0.0",
        "@types/chai": "^4.3.6",
        "@wagmi/cli": "^1.5.2",
        "chai": "^4.3.8",
        "concurrently": "^8.2.1",
        "cross-env": "^7.0.3",
        "erc6551": "^0.3.1",
        "ethers": "^6.7.1",
        "hardhat": "^2.19.1",
        "hardhat-gas-reporter": "^1.0.9",
        "hardhat-tracer": "^2.7.0",
        "prettier": "^3.0.0",
        "prettier-plugin-solidity": "^1.0.0",
        "rimraf": "^4.1.2",
        "solhint": "^3.4.0",
        "solhint-community": "^3.7.0-rc02",
        "solhint-plugin-prettier": "^0.1.0",
        "solidity-coverage": "^0.8.2",
        "typechain": "^8.3.1"
    },
    "dependencies": {
        "debug": "^4.3.4",
        "dotenv": "^16.3.1"
    }
}
