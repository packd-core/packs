{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2020"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": ["../../node_modules", "node_modules", "lib"],
  "files": ["./hardhat.config.ts"],
  "include": [
    "scripts/**/*",
    "tasks/**/*",
    "test/**/*",
    "utils/**/*",
    "types/generated/"
  ]
}
